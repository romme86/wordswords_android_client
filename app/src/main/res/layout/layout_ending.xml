<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="screen"
    android:baselineAligned="false"
    android:elevation="1dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg4" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titolo_fine"
                    android:layout_width="match_parent"
                    android:layout_height="133dp"
                    android:gravity="center"
                    android:text="Partita Finita"
                    android:textAllCaps="true"
                    android:textColor="@color/giallino_titoli"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/testo_fine"
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:text="Il vincitore è Ziblino con 24 punti!!!"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/button_home"
                    android:layout_width="200dp"
                    android:layout_height="59dp"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/bottone"
                    android:elevation="0dp"
                    android:textAlignment="center"
                    android:textColor="@color/giallino"
                    android:text="Torna al menù principale" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>