<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="screen"
    android:baselineAligned="false"
    android:elevation="1dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg2" />

    <LinearLayout
        android:id="@+id/rules"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark"
        android:elevation="2dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:gravity="center_horizontal"
            android:text="Regole da Scrivere"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_okregole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ho Capito" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:elevation="1dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <elbadev.com.wordswords.TypeWriter
            android:id="@+id/dashboard_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50px"
            android:layout_marginTop="30px"
            android:text="Wordswords"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_start"
            style="@android:style/Widget.Holo.Light.Button.Inset"
            android:layout_width="200dp"
            android:layout_height="59dp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/bottone"
            android:elevation="0dp"
            android:text="Crea Partita"
            android:textAlignment="center"
            android:textColor="@color/giallino"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_union"
            style="@android:style/Widget.Holo.Light.Button.Inset"
            android:layout_width="200dp"
            android:layout_height="59dp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/bottone"
            android:elevation="0dp"
            android:text="Cerca Partita"
            android:textAlignment="center"
            android:textColor="@color/giallino"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_history"
            style="@android:style/Widget.Holo.Light.Button.Inset"
            android:layout_width="200dp"
            android:layout_height="59dp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/bottone"
            android:text="Storico"
            android:textAlignment="center"
            android:textColor="@color/giallino"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_logout"
            style="@android:style/Widget.Holo.Light.Button.Inset"
            android:layout_width="200dp"
            android:layout_height="59dp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/bottone"
            android:elevation="0dp"
            android:text="Logout"
            android:textAlignment="center"
            android:textColor="@color/giallino"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navi"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/manu_bg"
        android:choiceMode="singleChoice"
        android:elevation="1dp">

        <Button
            android:id="@+id/button_chiudi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bottone"
            android:text="Chiudi"
            android:textAlignment="center"
            android:textColor="@color/giallino" />

        <Button
            android:id="@+id/button_compra"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/bottone"
            android:text="Compra"
            android:textAlignment="center"
            android:textColor="@color/giallino" />

        <elbadev.com.wordswords.TypeWriter
            android:id="@+id/title_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Turno"
            android:textColor="@color/giallino_titoli"
            android:textSize="15sp"
            android:visibility="gone" />

        <elbadev.com.wordswords.TypeWriter
            android:id="@+id/title_scores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Punti"
            android:textColor="@color/giallino_titoli"
            android:textSize="15sp"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <elbadev.com.wordswords.TypeWriter
                    android:id="@+id/title_giocatori_online"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="220dp"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:text="Giocatori Online"
                    android:textColor="@color/giallino_titoli"
                    android:textSize="15sp" />

                <ListView
                    android:id="@+id/lista_online"
                    android:layout_width="match_parent"
                    android:layout_height="333dp"
                    android:textAlignment="center" />

            </LinearLayout>
        </ScrollView>

        <!--<Button-->
        <!--android:id="@+id/button_info"-->
        <!--android:layout_width="150dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginTop="130dp"-->
        <!--android:background="@drawable/bottone"-->
        <!--android:text="Info"-->
        <!--android:textAlignment="center"-->
        <!--android:textColor="@color/giallino" />-->

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>